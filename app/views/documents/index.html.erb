<% content_for :javascript do %>
  <%= javascript_include_tag params[:controller] %>
<% end %>

<div id="content">
    <div class="container">
    
              <div id="tools">
                <%= link_to vehicle_maintenances_path(@vehicle) do %>
                  <i class="fa fa-chevron-circle-left fa-2x" data-toggle="tooltip" title="Manutenções"></i>
                   Manutenções
                <% end %>
                <a href="<%= new_vehicle_maintenance_document_path(@vehicle,@maintenance)%>" class="btn btn-success pull-right spaced">
                  <i class="fa fa-plus">
                  </i> Novo documento</a>
              </div>
              
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th></th> 
                    <th>Titulo</th>                
                    <th>Descrição</th>
                    <th>Arquivo</th>
                  </tr>
                </thead>
                <tbody>
                  <% @documents.each do |document| %>
                  <tr>
                    <td style="text-align: center;" class="refill-actions">
                      <%= link_to raw('<i class="fa fa-edit" data-toggle="tooltip" title="Editar documento"></i>'), 
                        "#editDocument", 
                        :data => { :url => edit_vehicle_maintenance_document_path(@vehicle, @maintenance, document), :toggle => "modal" }, 
                        :class => "edit-document-button" %>
                    </td>
                    <td>
                      <%= document.title %>
                    </td>
                    <td>
                      <%= document.description %>
                    </td>
                    <td>
                      <a href="<%= document.file.url %>">
                        <%= document.file.name %>
                      </a>
                    </td>
                  </tr>
                  <% end %>           
                </tbody>
              </table>
  </div>
</div>

<div id="content-below" class="wrapper">
  <div class="container">
    <div class="row">
      <div class="upsell"> <small class="muted">99.9% Uptime <span class="spacer">//</span> Free upgrade assistence <span class="spacer">//</span> 24/7 Support <span class="spacer">//</span> Plans from $19.99/month <span class="spacer">//</span> </small> <a href="pricing.htm" class="btn btn-primary">Start your Free Trial Today! <i class="fa fa-arrow-right"></i></a> </div>
    </div>
  </div>
</div>

<!-- Modal -->
  <div class="modal fade" id="editDocument" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Editando documento</h4>
        </div>
        <div class="modal-body">
          Carregando...
        </div>
      </div>
      <!-- /.modal-content --> 
    </div>
    <!-- /.modal-dialog --> 
  </div>